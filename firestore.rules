rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função helper para verificar se o usuário está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Função helper para verificar se o usuário é o dono do recurso
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Regras para a coleção de tasks
    match /tasks/{taskId} {
      // Permitir leitura apenas se o usuário está autenticado 
      // e a task pertence a ele
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Permitir criação apenas se:
      // 1. Usuário está autenticado
      // 2. O userId na task é o mesmo do usuário autenticado
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'title', 'completed']) &&
                       request.resource.data.title is string &&
                       request.resource.data.title.size() >= 1 &&
                       request.resource.data.title.size() <= 200;
      
      // Permitir atualização apenas se:
      // 1. Usuário é o dono da task
      // 2. Não está mudando o userId
      allow update: if isOwner(resource.data.userId) && 
                       request.resource.data.userId == resource.data.userId;
      
      // Permitir deleção apenas se o usuário é o dono
      allow delete: if isOwner(resource.data.userId);
    }
    
    // Negar tudo por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
